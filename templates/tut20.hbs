    <style>
        body {
            /* Use background image with opacity */
            background-image: url('../img/team.jpg');

            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            /* Set opacity for the background image */
            background-color: rgba(0, 0, 0, 0.6);
        }

        .container {
            font-size: 50px;
            justify-content: center;
            align-items: center;
            /* border: 2px solid white; */
            margin-bottom: 20px;

        }

        .team-container {
            max-width: 900px;
            margin: 20px auto;
            word-break: break-all;
            /* border: 2px solid red; */
        }

        pre {
            font-size: 20px;
            font-family: 'Courier New', Courier, monospace;
        }

        .member-card {
            background-color: #2b2b2b;
            width: 850px;
            border-radius: 20px;
            margin-bottom: 20px;
            padding: 20px;
            display: flex;
            align-items: center;
            color: #d6eaea;
            transition: transform 0.3s ease;
            /* box-shadow: 0 3px 6px white green(3px, 3px, 3px, 0.3); */
            box-shadow:
                2px 2px 2px 2px skyblue inset,
                -.4em 0 0.1em whitesmoke;
        }

        .member-card:hover {
            /* transform: translateY(-5px); */
            transform: scale(1.2);
            margin: 40px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);

           
            
        }

        .member-card img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 20px;
            border: 4px solid #d6eaea;
        }

        .member-details {
            flex-grow: 1;
            margin: 20px;
            background: #2b2b2b;
            /* Default background color */

        }

        h1 {
            color: rgb(247, 187, 187);
            margin: 0;
        }

        .reg-no {
            color: #30b7d2;
        }

        .member:hover {
            background: linear-gradient(to right, #30b7d2, #aa0c88);

        }

        /* Gradient background when hovering */
        .member:hover .member-details {
            background: linear-gradient(to right, #30b7d2, #aa0c88);
        }

        /* 3D animation effect when hovering */
        .member:hover .member-details {
            transform: perspective(1000px) rotateY(10deg);
        }

        pre {
            margin: 0;
        }
    </style>
</head>

